#include <stdio.h>
int main() {
    int age,type,discount;
    scanf("%d",&age,&type,&discount);
    switch(type)
    {
        case 1:
        if(age<12)
        {
            discount=300/2;
        }
   else if (age>=60) {
   discount=300*2/3;
   }
        break;
        case 2:
        if(age>=60){

        (discount=1000/2);
    }
       break;
    }
        printf("%d",discount);
         return 0;
    }


